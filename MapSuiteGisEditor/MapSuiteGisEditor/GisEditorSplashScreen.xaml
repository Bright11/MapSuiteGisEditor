<Window x:Class="ThinkGeo.MapSuite.GisEditor.GisEditorSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        WindowStartupLocation="Manual" 
        AllowsTransparency="True" 
        BorderBrush="Transparent" 
        Background="Transparent"
        BorderThickness="0">
    <Grid >
       <Image  x:Name="SplashScreenImage" HorizontalAlignment="Center"
               VerticalAlignment="Center" 
               Stretch="None"  />
        <StackPanel>
            <TextBlock Margin="0 245 45 0"  x:Name="version"
                       FontFamily="Tahoma"
                       FontSize="11pt"
                       FontWeight="Normal"
                       Foreground="#5b85b0"
                           TextAlignment="Right"  
                       Text="{DynamicResource ResourceKey=AboutWindowDscVersion1000BetaDscText}" />
        </StackPanel>
    </Grid>
</Window>
