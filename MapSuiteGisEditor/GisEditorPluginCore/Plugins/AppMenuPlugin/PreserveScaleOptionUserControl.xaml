<tg:SettingUserControl x:Class="ThinkGeo.MapSuite.GisEditor.Plugins.PreserveScaleOptionUserControl"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:tg="clr-namespace:ThinkGeo.MapSuite.GisEditor;assembly=GisEditorInfrastructure"
                       d:DesignHeight="300"
                       d:DesignWidth="300"
                       mc:Ignorable="d">
    <StackPanel>
        <CheckBox x:Name="PreserveScaleCheckBox"
                  Checked="PreserveScaleCheckBox_Checked"
                  Content="{DynamicResource PrintMapWindowPreserveScaleLabel}"
                  Unchecked="PreserveScaleCheckBox_Checked" />
    </StackPanel>
</tg:SettingUserControl>
