<UserControl x:Class="ThinkGeo.MapSuite.GisEditor.Plugins.SelectMethodUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="289" d:DesignWidth="474">
    <!--<Grid>-->
    <StackPanel Margin="0 20 0 0">
        <RadioButton IsChecked="True">
            <RadioButton.Content>
                <TextBlock Text="{DynamicResource ToolsSimplifyWizardStepThreeStardard}" Style="{DynamicResource SubtitleStyle}" />
            </RadioButton.Content>
        </RadioButton>
        <TextBlock Text="{DynamicResource ToolsSimplifyWizardStepThreeStardardDescription}"
                   TextWrapping="Wrap" Margin="15 0 0 30"/>
        <RadioButton IsChecked="{Binding PreserveTopology}">
            <RadioButton.Content>
                <TextBlock Text="{DynamicResource ToolsSimplifyWizardStepThreePreserveTopology}" Style="{DynamicResource SubtitleStyle}" />
            </RadioButton.Content>
        </RadioButton>
        <TextBlock Text="{DynamicResource ToolsSimplifyWizardStepThreePreserveTopologyDescription}"
                   TextWrapping="Wrap" Margin="15 0 0 30"/>
    </StackPanel>
    <!--</Grid>-->
</UserControl>