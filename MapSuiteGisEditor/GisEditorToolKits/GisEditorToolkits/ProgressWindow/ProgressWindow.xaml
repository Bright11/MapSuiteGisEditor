<Window x:Class="ThinkGeo.MapSuite.GisEditor.Toolkits.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="250"
        ResizeMode="NoResize"
        SizeToContent="Height"
        mc:Ignorable="d">
    <Grid Margin="6 7 6 8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock x:Name="mainContentTextBlock" HorizontalAlignment="Left" />
            <TextBlock x:Name="percentageTextBlock" HorizontalAlignment="Right" />
        </Grid>
        <ProgressBar Name="progressBar"
                     Grid.Row="1"
                     Height="20"
                     Margin="0 5 0 0" />
    </Grid>
</Window>
